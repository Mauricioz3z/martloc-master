
@{


    ViewData["Title"] = "Pessoas";
}

    <style>

        .error {
        color:red!important;
        }

    </style>
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Marcas</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Pessoas</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">


                    <div class="card-tools float-left">



                        <button type="button" class="btn btn-block btn-primary" data-toggle="modal" data-target="#modal-lg">
                            <i class="fas fa-plus"></i> Nova
                        </button>
                    </div>


                </div>

                <div class="card-body">
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>

                                <th>Id</th>
                                <th>Nome</th>
                                <th>Fone</th>
                                <th>Tipo</th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                        <tfoot>
                            <tr>

                                <th>Id</th>
                                <th>Nome</th>
                                <th>Fone</th>
                                <th>Tipo</th>
                                <th></th>

                            </tr>
                        </tfoot>
                    </table>
                </div>

            </div>
        </div>
    </div>

</section>



<div class="modal fade show" id="modal-lg" aria-modal="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Gerenciamento De Pessoas</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            @await Html.PartialAsync("_PessoaForm")
        </div>
    </div>
</div>
@section Scripts {
    <script asp-append-version="true"   src="~/js/views/pessoa/pessoa.js"></script>
}
